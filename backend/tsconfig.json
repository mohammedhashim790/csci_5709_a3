{
  "compilerOptions": {
    /* Language and environment */
    "target": "ES2020",
    "module": "nodenext",
    /* Project structure */
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": ".",

    /* Node.js resolution */
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],

    /* Type checking */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}